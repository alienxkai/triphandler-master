{% extends 'backoffice/login.html.twig' %}

{% block page_title %} Login Trip Handler - Client {% endblock %}

{% block login_form %}
    <div class="account-container">
        <div class="content clearfix">
            {# S'il y a une erreur, on l'affiche dans un joli cadre #}
            {% if error.message is defined %}
                <div class="alert alert-danger"><button type="button" class="close" data-dismiss="alert">Ã—</button>{{ error.message }}</div>
            {% endif %}
            <form action="{{ path('platform_client_login_check') }}" method="post">
                <h1 style="text-align: center">Client Office</h1>
                <div class="login-fields">
                    <p>Please provide your details</p>
                    <div class="field">
                        <label for="username">Username</label>
                        <input autocomplete="off" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username" class="login username-field" />
                    </div> <!-- /field -->

                    <div class="field">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" value="" placeholder="Password" class="login password-field"/>
                    </div> <!-- /password -->
                </div> <!-- /login-fields -->

                <div class="login-actions">
                <span class="login-checkbox">
                    <input id="rememberme" name="_remember_me" type="checkbox" class="field login-checkbox" tabindex="4" />
                    <label class="choice" for="rememberme">Keep me signed in</label>
                </span>
                    <button class="button btn btn-success btn-large">Sign In</button>
                </div> <!-- .actions -->
            </form>
        </div><!-- /content -->
    </div> <!-- /account-container -->
{% endblock %}