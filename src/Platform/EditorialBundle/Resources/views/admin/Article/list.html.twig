{% extends '/backoffice/index.html.twig' %}

{% block page_title %} Admin Page - Trip Handlers - Articles{% endblock %}

{% block maincontent %}

    <div class="row">
        <div class="span2">
            <a href="javascript:;" class="main-left"><img src="/back-office/icons/32x32/folder.png"> <span>Category</span></a>
            <a href="{{ path('platform_editorial_article_admin') }}" class="main-left"><img src="/back-office/icons/32x32/page_edit.png"> <span>Article</span></a>
            <a href="javascript:;" class="main-left"><img src="/back-office/icons/32x32/tag_blue.png"> <span>Tag</span></a>
            <a href="javascript:;" class="main-left"><img src="/back-office/icons/32x32/layout_header.png"> <span>Banner</span></a>
        </div>
        <!-- /span2 -->
        <div class="span10">
            <div class="widget widget-table action-table">
                <div class="widget-header"> <i class="icon-th-list"></i>
                    <h3> {%  block header_title %} Articles {% endblock %} </h3>
                    <a href="{{ path('platform_editorial_article_form_admin') }}" class="btn btn-primary btn-small pull-right btn-header" data-toggle="modal" data-target="#myModal" >
                        <i class="icon-plus"></i>&nbsp; Add
                    </a>
                    <div id="myModal" class="modal modal-large fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">

                            </div>
                        </div>
                    </div>

                </div>
                <!-- /widget-header -->
                <div class="widget-content">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th> Id </th>
                            <th> Title </th>
                            <th> Description </th>
                            <th> Created On </th>
                            <th> Status </th>
                            <th class="td-actions"> </th>
                        </tr>
                        </thead>
                        <tbody>

                            {% if articles is not empty %}
                                {% for article in articles %}
                                    <tr>
                                        <td> {{ article.contentid }} </td>
                                        <td> {{ article.title }} </td>
                                        <td> {{ article.description }} </td>
                                        <td> {{ article.createdOn }} </td>
                                        <td> {{ article.status }} </td>
                                        <td class="td-actions"><a href="{{ path('platform_editorial_article_form_admin', {'articleId': article.contentid}) }}" class="btn btn-mini btn-success" data-toggle="modal" data-target="#myModal"><i class="btn-icon-only icon-ok"> </i></a>
                                            <a href="{{ path('platform_user_delete', {'userid': article.contentid}) }}" onclick="confirm('Voulez-vous supprimer?');" class="btn btn-danger btn-mini"><i class="btn-icon-only icon-remove"> </i></a></td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr >
                                    <td colspan="6" class="text-center">No items yet</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
                <!-- /widget-content -->
            </div>
            <!-- /widget -->
        </div>
        <!-- /span9 -->
    </div>

{% endblock %}